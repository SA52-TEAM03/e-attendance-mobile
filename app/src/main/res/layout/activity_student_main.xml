<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".LogInActivity">

    <TextView
        android:id="@+id/greeting"
        android:textSize="22sp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTakeAttendance"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/take_attendance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imgClassSchedule"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03"/>

        <ImageView
            android:id="@+id/imgClassSchedule"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/class_schedule"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgTakeAttendance"
            app:layout_constraintRight_toLeftOf="@id/imgCheckAttendance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03"/>

        <ImageView
            android:id="@+id/imgCheckAttendance"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/check_attendance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/imgClassSchedule"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03"/>

        <ImageView
            android:id="@+id/imgSubmitLeave"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/submit_leave"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgTakeAttendance"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintVertical_bias="0.05"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>